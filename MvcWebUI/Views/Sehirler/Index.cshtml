@model IEnumerable<SehirModel>

@{
    ViewData["Title"] = "Şehir Listesi";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Yeni Şehir</a>
</p>

@if (Model == null || Model.Count() == 0)
{
        <p class="bg-danger text-white">
            Kayıt bulunamadı
        </p>
}
else
{
        <p class="bg-success text-white">
        @Model.Count() kayıt bulundu
        </p>
}

@if (TempData["Success"] != null)
{
    <p class="text-success">@TempData["Success"]</p>
}

@if (TempData["Error"] != null)
{
    <p class="text-danger">@TempData["Error"]</p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Adi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UlkeDisplay.Adi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Adi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UlkeDisplay.Adi)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Detay</a>&nbsp;|&nbsp;
                    <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>&nbsp;|&nbsp;

                    @*<a asp-action="Delete" asp-route-id="@item.Id">Sil</a>*@
                    <a href="#" onclick="sehirSil(@item.Id);">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @* https://alertifyjs.com/ *@
    <link href="~/lib/AlertifyJS/css/alertify.min.css" rel="stylesheet" />
    <script src="~/lib/AlertifyJS/alertify.min.js"></script>

    <script>
        function sehirSil(id) {
            alertify.confirm("Uyarı!",
                "Bu şehri silmek istediğinize emin misiniz?",
                function () { // OK
                    //alertify.success("Silme başarılı.");
                    window.location.href = "/Sehirler/Delete/" + id;
                },
                function () { // Cancel
                    //alertify.error("Silme iptal edildi.");
                }
            ).set('labels', { ok: 'Evet', cancel: 'Hayır' });
        }
    </script>
}