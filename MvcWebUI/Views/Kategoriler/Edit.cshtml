@*
    ~/Views/_ViewStart.cshtml'de Layout değişkeni projenin _Layout.cshtml'ine set edildiği için view'lar
    scaffold edilirken her seferinde layout seçilmesine gerek yoktur.
*@

@*@model DataAccess.Entities.Kategori*@
@model KategoriModel

@{
    //ViewData["Title"] = "Edit";
    ViewData["Title"] = "Kategori Düzenle";
}

<h1>@ViewData["Title"]</h1>

@* Kategoriler controller'ının Edit post action'ında ViewBag.Error set ediliyor ve burada kullanılıyor. *@
@*@if (ViewData["Error"] != null)*@
@if (ViewBag.Error != null)
{
    <p class="text-danger">
        @ViewBag.Error
    </p>
}

<h4>Kategori</h4>
<hr />
<div class="row">
    <div class="col-12">

        @* Tag Helper *@
        @*<form asp-action="Edit">*@
        @* form tag helper'ında method yazılmazsa default post'tur. *@

        @* HTML Helper *@
        @*@using (Html.BeginForm("Edit", "Kategoriler", FormMethod.Post)) *@

        @*@using (Html.BeginForm("Edit", "Kategoriler")) *@
        @* form HTML helper'ında method yazılmazsa default post'tur. *@

        @using (Html.BeginForm()) 
        @*
            Kategoriler controller'ı Edit action'ından geldiğini bildiği için 
            form verilerini Kategoriler controller'ının Edit action'ına post olarak gönderir. 
        *@
        { @* <form> *@

            @* HTML Helper *@
            @Html.AntiForgeryToken()

            @* Tag Helper *@
            @*<div asp-validation-summary="All" class="text-danger"></div>*@

            @* HTML Helper *@
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            <div class="row mb-3">

                @* Tag Helper *@
                @*<label asp-for="Adi" class="col-2 col-form-label"></label>*@

                @* HTML Helper *@
                @*@Html.Label("Adi", "Adı", new { @class="col-2 col-form-label" })*@
                @Html.LabelFor(model => model.Adi, new { @class="col-2 col-form-label" })
                
                <div class="col-5">

                    @* Tag Helper *@
                    @*<input asp-for="Adi" class="form-control" placeholder="Kategori adı giriniz..." />*@ @* model'deki özelliğin veri tipine göre otomatik input oluşturur. *@
                    @*<input asp-for="Adi" class="form-control" type="text" placeholder="Kategori adı giriniz..." />*@ @* textbox oluşturur. *@

                    @* HTML Helper *@
                    @*@Html.EditorFor(model => model.Adi)*@ @* model'deki özelliğin veri tipine göre otomatik input oluşturur. *@
                    @Html.TextBoxFor(model => model.Adi, new { @class = "form-control", placeholder = "Kategori adı giriniz..." }) @* textbox oluşturur. *@

                    @* Tag Helper *@
                    @*<span asp-validation-for="Adi" class="text-danger"></span>*@
                    @* HTML Helper *@
                    @Html.ValidationMessageFor(model => model.Adi, null, new { @class = "text-danger" })

                </div>
            </div>
            <div class="row mb-3">

                @* Tag Helper *@
                @*<label asp-for="Aciklamasi" class="col-2 col-form-label"></label>*@

                @* HTML Helper *@
                @Html.LabelFor(model => model.Aciklamasi, new { @class="col-2 col-form-label" })

                <div class="col-5">

                    @* Tag Helper *@
                    @*<input asp-for="Aciklamasi" class="form-control" />*@
                    @*<textarea asp-for="Aciklamasi" class="form-control" rows="3" placeholder="Kategori açıklaması giriniz..."></textarea>*@

                    @* HTML Helper *@
                    @Html.TextAreaFor(model => model.Aciklamasi, new { @class = "form-control", rows = "3", placeholder = "Kategori açıklaması giriniz..." })

                    @* Tag Helper *@
                    @*<span asp-validation-for="Aciklamasi" class="text-danger"></span>*@

                    @* HTML Helper *@
                    @Html.ValidationMessageFor(model => model.Aciklamasi, null, new { @class = "text-danger" })

                </div>
            </div>

            @* Tag Helper *@
            @*<input type="hidden" asp-for="Id" />*@

            @* HTML Helper *@
            @Html.HiddenFor(model => model.Id)

            @* <div class="row mb-3">
                <label asp-for="Guid" class="col-2 col-form-label"></label>
                <div class="col-5">
                <input asp-for="Guid" class="form-control" />
                <span asp-validation-for="Guid" class="text-danger"></span>
                </div>
                </div>*@

            <div class="row mb-3">
                <div class="offset-2 col-5">
                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                    &nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-primary">Temizle</button>
                    &nbsp;&nbsp;

                    @* Tag Helper *@
                    @*<a asp-action="Index">Kategori Listesi</a>*@

                    @* HTML Helper *@
                    @Html.ActionLink("Kategori Listesi", "Index")

                </div>
            </div>

            @*</form>*@

        } @* </form> *@

    </div>
</div>

