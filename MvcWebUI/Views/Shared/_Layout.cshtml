<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>E-Ticaret | @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/main.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>E-Ticaret</h3>
            </div>
            <ul class="list-unstyled components">
                <li class="nav-item">
                    <a asp-action="Index" asp-controller="Urunler" class="a-sidebar">Ürünler</a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    @if (User.IsInRole("Admin"))
                    {
                            <li class="nav-item">
                            @* HTML *@
                            @*<a class="a-navbar" href="/Database/Seed"> Verileri Sıfırla</a>*@

                            @* HTML Helper Klasik MVC ve MVC Core *@
                            @*@Html.ActionLink("Verileri Sıfırla", "Seed", "Database", null, new { @class = "a-navbar" })*@

                            @* Tag Helper MVC Core *@
                            @*<a asp-action="Seed" asp-controller="Database" class="a-navbar">Verileri Sıfırla</a>*@
                            </li>
                    }
                    <li class="nav-item">
                        <a asp-action="Index" asp-controller="Kategoriler" class="a-sidebar">Kategoriler</a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="Index" asp-controller="Magazalar" class="a-sidebar">Mağazalar</a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Kullanicilar" class="a-sidebar">Kullanıcılar</a>
                        </li>
                    }
                }
            </ul>
            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <ul class="list-unstyled admin">
                    <p>Tanımlar</p>
                    <li class="nav-item">
                        <a asp-action="Index" asp-controller="Ulkeler" class="a-sidebar">Ülkeler</a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="Index" asp-controller="Sehirler" class="a-sidebar">Şehirler</a>
                    </li>
                </ul>
            }
        </nav>
        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="#" id="sidebarCollapse" class="a-navbar" title="Close Menu">
                            <i class="fas fa-list-alt"></i>
                            <i id="i-collapse" class="fas fa-chevron-left"></i> Menü
                        </a>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-button" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon navbar-span"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="a-navbar" href="#"> Ana Sayfa</a>
                        </li>
                    </ul>
                    <div class="navbar-text">
                        <ul class="navbar-nav me-auto">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="a-navbar" asp-action="Kayit" asp-controller="Hesaplar"> Kayıt</a>
                                </li>
                                <li class="nav-item">
                                    <a class="a-navbar" asp-action="Giris" asp-controller="Hesaplar"> Giriş</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <div class="div-navbar">
                                        <span class="s-navbar"> @User.Identity.Name</span>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <a class="a-navbar" asp-action="Cikis" asp-controller="Hesaplar"> Çıkış</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="container">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
