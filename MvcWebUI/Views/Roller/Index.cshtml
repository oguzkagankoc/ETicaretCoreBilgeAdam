@model List<RolModel>

@{
    ViewData["Title"] = "Rol Listesi";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Yeni Rol</a>
</p>

<partial name="_Sonuc" />

@if (!(Model == null || Model.Count == 0))
{
    <div style="overflow-y: auto; height: 450px; border-style: solid; border-width: 1px;">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Adi)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Adi)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id">Detay</a>&nbsp;|&nbsp;
                            <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
